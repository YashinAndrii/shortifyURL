<configuration>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%level] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
</configuration>